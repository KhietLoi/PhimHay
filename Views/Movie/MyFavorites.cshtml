@model List<MovieWebsite.Models.Favorite>

@{
    ViewData["Title"] = "Phim yêu thích";
    Layout = "_Layout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="mb-4">🎬 Danh sách phim yêu thích</h2>

    @if (!Model.Any())
    {
        <p>Bạn chưa thêm phim nào vào danh sách yêu thích.</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <a href="@Url.Action("Detail", "Movie", new { id = item.MovieId })">
                            <img src="@item.Movie.ThumbnailUrl" class="card-img-top" alt="@item.Movie.Title" />
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="@Url.Action("Detail", "Movie", new { id = item.MovieId })" class="text-dark text-decoration-none">
                                    @item.Movie.Title
                                </a>
                            </h5>
                            <p class="card-text text-muted">@item.Movie.Description?.Substring(0, Math.Min(100, item.Movie.Description.Length))...</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
