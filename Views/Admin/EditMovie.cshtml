@model Movie
@{
    ViewData["Title"] = "Thêm mới phim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Chỉnh sửa chi tiết</h3>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="Admin" asp-action="EditMovie" asp-route-id="@Model.MovieId" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input asp-for="MovieId" type="hidden" />
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Tựa đề</label>
                    <input asp-for="Title" class="form-control" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Duration" class="form-label">Thời lượng (phút)</label>
                        <input asp-for="Duration" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="RealeaseAt" class="form-label">Ngày phát hành</label>
                        <input asp-for="RealeaseAt" class="form-control" type="date" />
                        <span asp-validation-for="RealeaseAt" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Country" class="form-label">Quốc gia</label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <!-- Thumbnail section -->
                <div class="mb-3">
                    <label class="form-label">Ảnh bìa</label>
                    <div class="card p-3">
                        <!-- Current thumbnail preview -->
                        @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ảnh bìa hiện tại:</label>
                                <div>
                                    <img src="@Model.ThumbnailUrl" alt="Movie thumbnail" class="img-thumbnail" style="max-height: 150px" />
                                </div>
                                <input type="hidden" asp-for="ThumbnailUrl" />
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No thumbnail currently set</p>
                        }

                        <!-- Options to change thumbnail -->
                        <div class="mb-0">
                            <label class="form-label fw-bold">Thay đổi ảnh bìa (tùy chọn):</label>
                            <div class="mb-2">
                                <label class="form-check">
                                    <input class="form-check-input" type="radio" name="thumbnailOption" value="keep" checked id="keepThumbnail" />
                                    <span class="form-check-label">Giữ ảnh bìa hiện tại</span>
                                </label>
                            </div>
                            <div class="mb-2">
                                <label class="form-check">
                                    <input class="form-check-input" type="radio" name="thumbnailOption" value="upload" id="uploadThumbnail" />
                                    <span class="form-check-label">Tải ảnh bìa mới</span>
                                </label>
                                <div id="uploadThumbnailSection" class="ms-4 mt-2" style="display: none;">
                                    <input type="file" name="thumbnailFile" class="form-control" accept="image/*" />
                                </div>
                            </div>
                            <div class="mb-0">
                                <label class="form-check">
                                    <input class="form-check-input" type="radio" name="thumbnailOption" value="url" id="urlThumbnail" />
                                    <span class="form-check-label">Tải bằng link</span>
                                </label>
                                <div id="urlThumbnailSection" class="ms-4 mt-2" style="display: none;">
                                    <input name="thumbnailUrlInput" class="form-control" placeholder="Enter image URL" value="@Model.ThumbnailUrl" />
                                    <span asp-validation-for="ThumbnailUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="VideoUrl" class="form-label">Đường link phim</label>
                    <input asp-for="VideoUrl" class="form-control" type="url" />
                    <span asp-validation-for="VideoUrl" class="text-danger"></span>
                </div>

                <!-- Categories Selection -->
                <div class="mb-3">
                    <label class="form-label">Thể loại</label>
                    <div class="border p-3 rounded">
                        @foreach (var category in ViewBag.Categories)
                        {
                            <div class="form-check form-check-inline mb-2">
                                <input class="form-check-input" type="checkbox"
                                       name="SelectedCategories"
                                       value="@category.CategoryId"
                                       id="cat_@category.CategoryId"
                                @(ViewBag.SelectedCategories != null && ViewBag.SelectedCategories.Contains(category.CategoryId) ? "checked" : "") />
                                <label class="form-check-label" for="cat_@category.CategoryId">@category.CategoryName</label>
                            </div>
                        }
                    </div>
                    <small class="form-text text-muted">Chọn một hoặc nhiều thể lại cho phim</small>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-controller="Admin" asp-action="Movies" class="btn btn-secondary me-2">Hủy</a>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Thumbnail option toggle
        document.addEventListener('DOMContentLoaded', function() {
            const keepOption = document.getElementById('keepThumbnail');
            const uploadOption = document.getElementById('uploadThumbnail');
            const urlOption = document.getElementById('urlThumbnail');
            const uploadSection = document.getElementById('uploadThumbnailSection');
            const urlSection = document.getElementById('urlThumbnailSection');

            // Initial setup
            toggleSections();

            // Add event listeners
            keepOption.addEventListener('change', toggleSections);
            uploadOption.addEventListener('change', toggleSections);
            urlOption.addEventListener('change', toggleSections);

            function toggleSections() {
                uploadSection.style.display = uploadOption.checked ? 'block' : 'none';
                urlSection.style.display = urlOption.checked ? 'block' : 'none';
            }

            // Form submission handling
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                // If URL option is selected, update the hidden ThumbnailUrl field
                if (urlOption.checked) {
                    const urlInput = document.querySelector('input[name="thumbnailUrlInput"]');
                    const thumbnailUrlField = document.querySelector('input[asp-for="ThumbnailUrl"]');
                    thumbnailUrlField.value = urlInput.value;
                }
            });
        });
    </script>
}