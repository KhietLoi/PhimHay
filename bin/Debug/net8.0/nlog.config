<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Off">

	<!-- Kích hoạt NLog cho ASP.NET Core -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- Định nghĩa các mục tiêu (targets) để ghi log -->
	<targets>
		<!-- Ghi log ra console -->
		<target xsi:type="Console" name="console"
				layout="${date:format=yyyy-MM-dd HH\:mm\:ss} | ${level:uppercase=true} | ${logger} | ${message} ${exception:format=tostring}" />

		<!-- Ghi log ra tệp tin -->
		<target xsi:type="File" name="file"
				fileName="logs/app-${shortdate}.log"
				layout="${date:format=yyyy-MM-dd HH\:mm\:ss} | ${level:uppercase=true} | ${logger} | ${message} ${exception:format=tostring}" />
	</targets>

	<!-- Định nghĩa quy tắc ghi log -->
	<rules>
		<!-- Ghi tất cả các cấp log (Debug trở lên) ra console và file -->
		<logger name="MovieWebsite.Controllers.*" minlevel="Debug" writeTo="console,file" />
		<!-- Lọc log từ Microsoft và System, chỉ ghi từ mức Warn trở lên -->
		<logger name="Microsoft.*" minlevel="Off" writeTo="console,file" final="true" />
		<logger name="System.*" minlevel="Off" writeTo="console,file" final="true" />
	</rules>
</nlog>