 @model MovieWebsite.Models.Movie

@{
    Layout = "_Layout";
}
@if (TempData["SuccessMessage_rating"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-2 auto-dismiss" role="alert">
        @TempData["SuccessMessage_rating"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <h2>@Model.Title</h2>
    <p><strong>Thời lượng:</strong> @Model.Duration</p>
    <p><strong>Quốc gia:</strong> @Model.Country</p>
    <p><strong>Mô tả:</strong> @Model.Description</p>

    <!-- Giao diện xem phim -->
    <div class="video-player mb-4">
        @if (Model.VideoUrl.Contains("youtube"))
        {
            var embedUrl = Model.VideoUrl.Replace("watch?v=", "embed/").Split('&')[0];
            <iframe width="100%" height="500" src="@embedUrl" frameborder="0" allowfullscreen></iframe>
        }
        else
        {
            <video width="100%" height="500" controls>
                <source src="@Model.VideoUrl" type="video/mp4" />
                Trình duyệt của bạn không hỗ trợ video.
            </video>
        }
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <form asp-action="RateMovie" method="post" class="mb-4">
            @Html.AntiForgeryToken()
            <input type="hidden" name="movieId" value="@Model.MovieId" />
            <label>Đánh giá phim:</label>
            <select name="stars" class="form-select w-auto d-inline mx-2">
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i ⭐</option>
                }
            </select>
            <button type="submit" class="btn btn-success">Gửi đánh giá</button>
        </form>
    }

    <!-- Form bình luận -->
    <div class="comment-section mt-5">
        <h4>Bình luận</h4>

        @if (User.Identity.IsAuthenticated)
        {
            <form asp-action="AddComment" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="movieId" value="@Model.MovieId" />

                <textarea name="commentText" class="form-control" placeholder="Nhập bình luận..." required></textarea>
                <button type="submit" class="btn btn-primary mt-2">Gửi bình luận</button>
            </form>
        }
        else
        {
            <p><a asp-controller="Account" asp-action="Login">Đăng nhập</a> để bình luận.</p>
        }

        <!-- Danh sách bình luận -->
        @if (Model.Comments != null && Model.Comments.Any())
        {
            <div class="mt-4">
                @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                {
                    <div class="border p-2 mb-2 rounded bg-light">
                        <strong>@comment.User.UserName</strong>
                        <span class="text-muted" style="font-size: 0.9em;">(@comment.CreatedAt.ToLocalTime())</span>
                        <p>@comment.CommentText</p>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="mt-3 text-muted">Chưa có bình luận nào.</p>
        }
    </div>
</div>
<script>
    // Ẩn tất cả alert sau 3 giây
    window.addEventListener('DOMContentLoaded', () => {
        const alerts = document.querySelectorAll('.auto-dismiss');
        alerts.forEach(alert => {
            setTimeout(() => {
                alert.classList.remove('show');
                alert.classList.add('hide');
            }, 3000);
        });
    });
</script>
